@model IEnumerable<SistemaEstetica2.Models.Agendamento>

@{
    ViewData["Title"] = "agendCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agendamentos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.reservaData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reservaHorario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.funcionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.servico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.reservaData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reservaHorario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.funcionario.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cliente.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servico.descricao)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.id"><input type="submit" value="Editar" class="btn btn-primary bg-warning text-dark border-0" /></a> |
                 <a asp-action="Details" asp-route-id="@item.id"><input type="submit" value="Detalhar" class="btn btn-primary border-0" /></a> |
                 <a asp-action="Delete" asp-route-id="@item.id"><input type="submit" value="Excluir" class="btn btn-primary bg-danger border-0" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
